<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?eclipse version="3.0"?>

<plugin>
   <extension-point id="splashExtension" name="KNIME Splash Extensions" schema="schema/splashExtension.exsd"/>

   <extension id="KNIME_APPLICATION" point="org.eclipse.core.runtime.applications">
      <application>
         <run class="org.knime.product.rcp.KNIMEApplication"/>
      </application>
   </extension>
   <extension id="KNIME_PRODUCT" name="KNIME Workbench - Standalone Version" point="org.eclipse.core.runtime.products">
      <product application="org.knime.product.KNIME_APPLICATION" description="An Integrated and Extensible Data Analysis Workbench" name="KNIME">
         <property name="windowImage" value="icons/knime.png"/>
         <property
               name="aboutText"
               value="Welcome to KNIME v2.0.0.0016392&#x0A;the Konstanz Information Miner&#x0A;Copyright, 2003 - 2008&#x0A;email: contact@knime.org&#x0A;&#x0A;This version of KNIME is licensed under the Aladdin Open Source &#x0A;License. Please see the license file in the installation directory and &#x0A;contact us if you cannot locate it. More details can be found at&#x0A;http://www.knime.org&#x0A;&#x0A;Based on Eclipse, www.eclipse.org &#x0A;Uses: Java, GEF, Log4J"/>
         <property name="aboutImage" value="icons/knime64.gif"/>
         <property name="appName" value="KNIME">
         </property>
         <property name="preferenceCustomization" value="plugin_customization.ini">
         </property>
         <property
               name="windowImages"
               value="icons/knime.gif,icons/knime32.gif,icons/knime64.gif">
         </property>
      </product>
   </extension>
   <extension point="org.eclipse.ui.commands">
      <keyConfiguration description="KNIME Workbench Key Configuration" id="org.knime.product.keyConfiguration" name="org.knime.product.keyConfiguration">
      </keyConfiguration>
      <command description="Creates a new KNIME project" id="open.new.project.wizard" name="New KNIME Project...">
      </command>
   </extension>
   <extension id="KNIME_BATCH_APPLICATION" point="org.eclipse.core.runtime.applications">
      <application>
         <run class="org.knime.product.headless.KNIMEBatchApplication"/>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="org.knime.product.splashHandlers.ExtensibleSplashHandler"
            id="org.knime.product.splashHandlers.extensible">
      </splashHandler>
      <splashHandlerProductBinding
            productId="org.knime.product.KNIME_PRODUCT"
            splashId="org.knime.product.splashHandlers.extensible">
      </splashHandlerProductBinding>
   </extension>
